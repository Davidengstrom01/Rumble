{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Rumble.Api/bin/Debug/net10.0/Rumble.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Rumble.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Launch Web App",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/rumble-client/src",
            "sourceMaps": true
        },
        {
            "name": "Launch Web App (Firefox)",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/rumble-client/src",
            "sourceMaps": true
        }
    ],
    "compounds": [
        {
            "name": "Launch Full Stack",
            "configurations": ["Launch API", "Launch Web App"],
            "stopAll": true
        }
    ]
}